<j:jelly xmlns:j="jelly:core" xmlns:st="jelly:stapler" xmlns:d="jelly:define"
	xmlns:l="/lib/layout" xmlns:t="/lib/hudson" xmlns:f="/lib/form">
	<f:entry title="${%Crowd URL}" field="url">
		<f:textbox />
	</f:entry>
	<f:entry title="${%Application Name}" field="applicationName">
		<f:textbox />
	</f:entry>
	<f:entry title="${%Application Password}" field="password">
		<f:password />
    </f:entry>
	<f:entry title="${%Restrict groups}" field="group">
		<f:textbox default="jenkins-users" />
	</f:entry>
    <f:entry title="${%Use nested groups}" field="nestedGroups">
        <f:checkbox />
    </f:entry>
    <f:optionalBlock title="${%Use SSO}" field="useSSO" inline="true">
        <f:entry title="cookie.domain" field="cookieDomain">
            <f:textbox />
        </f:entry>
        <f:entry title="cookie.tokenkey" field="cookieTokenkey">
            <f:textbox default="crowd.token_key" />
        </f:entry>
        <f:entry title="Secure https" field="secure">
            <f:checkbox default="false"/>
        </f:entry>
    </f:optionalBlock>
    <f:advanced>
        <f:optionalBlock title="${%Enable Proxy}" field="useProxy" inline="true">
            <f:entry title="http.proxy.host" field="httpProxyHost">
                <f:textbox />
            </f:entry>
            <f:entry title="http.proxy.port" field="httpProxyPort">
                <f:textbox />
            </f:entry>
            <f:entry title="http.proxy.username" field="httpProxyUsername">
                <f:textbox />
            </f:entry>
            <f:entry title="http.proxy.password" field="httpProxyPassword">
                <f:password />
            </f:entry>
        </f:optionalBlock>
        <f:entry title="session.validationinterval" field="sessionValidationInterval">
            <f:textbox default="2" />
        </f:entry>
        <f:entry title="http.max.connections" field="httpMaxConnections">
            <f:textbox default="20" />
        </f:entry>
        <f:entry title="http.timeout" field="httpTimeout">
            <f:textbox default="5000" />
        </f:entry>
        <f:entry title="socket.timeout" field="socketTimeout">
            <f:textbox default="20000" />
        </f:entry>
    </f:advanced>
	<f:validateButton method="testConnection" title="${%Check Connection}"
		with="url,applicationName,password,group,useSSO,cookieDomain,cookieTokenkey,sessionValidationInterval,httpMaxConnections,httpTimeout,socketTimeout,useProxy,httpProxyHost,httpProxyPort,httpProxyUsername,httpProxyPassword" />
</j:jelly>
